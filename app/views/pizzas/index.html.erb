dx<p id="notice"><%= notice %></p>

<h1>All Launchpad's Pizzas</h1>
<div class="row">
  <% @pizzas.each do |pizza| %>
  <div class="col-sm-6 col-md-4"
  <div class="thumbail">
  <img src="<%= pizza.image %>" alt="launchpad's pizza">
  <div class="caption">
    <h3><%= pizza.name %></h3>
    <h3>Cost: <%= pizza.cost %></h3>
    <%= link_to "More info", pizza, class: "btn btn-default" %>
    </div>
  </div>
</div>
<% end %>
</div>

<br>

<%= link_to "New Pizza", new_pizza_path, class: "btn btn-default" %>




<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Sauce</th>
      <th>Toppings</th>
      <th>Cost</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pizzas.each do |pizza| %>
      <tr>
        <td><%= pizza.name %></td>
        <td><%= pizza.sauce %></td>
        <td><%= pizza.toppings %></td>
        <td><%= pizza.cost %></td>
        <td><%= pizza.image %></td>
        <td><%= link_to 'Show', pizza %></td>
        <td><%= link_to 'Edit', edit_pizza_path(pizza) %></td>
        <td><%= link_to 'Destroy', pizza, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pizza', new_pizza_path %>
